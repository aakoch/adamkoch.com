- var title = 'Art'
mixin project(title, status)
  .project
    .project-wrapper
      h2= title
      .project-body
        if block
          block
        else
          p No description yet
        .status-wrapper Status: 
          span.status #{status}

block variables
doctype html
html.no-js(lang="en")

  head
    include ../templates/head
  body
    include ../templates/pageheader

    .container
      h1 #{title}

      p Things I'm considering having here are:
      ul
        li Music
        li Audio and video editing
        li CAD
        li
          abbr(title="Human-computer interaction") HCI
        li 
          abbr(title="Marble Machine X") MMX

    include ../templates/footer

    block body_scripts