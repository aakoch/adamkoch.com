- var title = 'Current Projects'
mixin project(title, status)
  .project
    .project-wrapper
      h2= title
      .project-body
        if block
          block
        else
          p No description yet
        .status-wrapper Status: 
          span.status #{status}

block variables
doctype html
html.no-js(lang="en")

  head
    include ../templates/head
  body
    include ../templates/pageheader

    .container
      h1 #{title}
      
      +project('Swamp Fan', 'Stage One Complete')

    include ../templates/footer

    block body_scripts

    script(src="../js/posts.js" type="module")